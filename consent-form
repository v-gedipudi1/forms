                            <div class="radio-option">
                                <input type="radio" id="q25_no" name="q25_pregnant" value="No">
                                <label for="q25_no">No</label>
                            </div>
                        </div>
                    </div>

                    <div class="question">
                        <div class="question-text">26) Have you ever undergone an MRI for clinical purposes?</div>
                        <div class="yes-no-group">
                            <div class="radio-option">
                                <input type="radio" id="q26_yes" name="q26_mri" value="Yes">
                                <label for="q26_yes">Yes</label>
                            </div>
                            <div class="radio-option">
                                <input type="radio" id="q26_no" name="q26_mri" value="No">
                                <label for="q26_no">No</label>
                            </div>
                        </div>
                        <textarea name="q26_details" placeholder="If yes, did any problems occur during scanning? If yes, please specify:"></textarea>
                    </div>

                    <div class="question">
                        <div class="question-text">27) Have you ever undergone TMS?</div>
                        <div class="yes-no-group">
                            <div class="radio-option">
                                <input type="radio" id="q27_yes" name="q27_tms" value="Yes">
                                <label for="q27_yes">Yes</label>
                            </div>
                            <div class="radio-option">
                                <input type="radio" id="q27_no" name="q27_tms" value="No">
                                <label for="q27_no">No</label>
                            </div>
                        </div>
                        <div class="question-text" style="margin-top: 15px;">If yes, have you ever had an adverse reaction to TMS?</div>
                        <div class="yes-no-group">
                            <div class="radio-option">
                                <input type="radio" id="q27_reaction_yes" name="q27_tms_reaction" value="Yes">
                                <label for="q27_reaction_yes">Yes</label>
                            </div>
                            <div class="radio-option">
                                <input type="radio" id="q27_reaction_no" name="q27_tms_reaction" value="No">
                                <label for="q27_reaction_no">No</label>
                            </div>
                        </div>
                        <textarea name="q27_details" placeholder="If yes, please specify:"></textarea>
                    </div>
                </div>

                <!-- Consent Section -->
                <div class="consent-section">
                    <div class="consent-text">
                        I answered all questions truthfully and to the best of my knowledge and belief. If deemed medically appropriate by my physician, I consent to undergo transcranial magnetic stimulation under the care and direction of my physician.
                    </div>
                    
                    <div class="signature-section">
                        <div class="form-group">
                            <label for="signature">Signature: <span class="required">*</span></label>
                            <input type="text" id="signature" name="signature" placeholder="Type your full name as signature" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="signatureDate">Date: <span class="required">*</span></label>
                            <input type="date" id="signatureDate" name="signatureDate" required>
                        </div>
                    </div>
                </div>

                <div class="submit-section">
                    <button type="submit" class="submit-btn" onclick="submitForm()">Submit Consent Form</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function submitForm() {
            // Get form data
            const form = document.getElementById('tmsForm');
            const formData = new FormData(form);
            
            // Create email body
            let emailBody = "TMS Informed Consent Form Submission\n\n";
            emailBody += "=== PATIENT INFORMATION ===\n";
            emailBody += `Name: ${formData.get('fullName')}\n`;
            emailBody += `Gender: ${formData.get('gender')}\n`;
            emailBody += `Date of Birth: ${formData.get('dob')}\n`;
            emailBody += `Phone: ${formData.get('phone')}\n`;
            emailBody += `Email: ${formData.get('email')}\n\n`;
            
            emailBody += "=== SCREENING QUESTIONNAIRE RESPONSES ===\n";
            
            // Add all questions and responses
            const questions = [
                {key: 'q1_epilepsy', text: '1) Do you have epilepsy?', details: 'q1_details'},
                {key: 'q2_seizure', text: '2) Have you ever had a convulsion or a seizure?', details: 'q2_details'},
                {key: 'q3_family_epilepsy', text: '3) Does someone in your family have epilepsy?', details: 'q3_details'},
                {key: 'q4_consciousness', text: '4) Have you ever lost consciousness without any known reason?', details: 'q4_details'},
                {key: 'q5_head_trauma', text: '5) Have you ever had a severe head trauma?', details: 'q5_details'},
                {key: 'q6_stroke', text: '6) Have you ever had a stroke?', details: 'q6_details'},
                {key: 'q7_head_surgery', text: '7) Have you ever undergone surgery to your head?', details: 'q7_details'},
                {key: 'q9_deviations', text: '9) Do you have any deviations of the spinal cord, bone marrow, or ventricular system?', details: 'q9_details'},
                {key: 'q10_hearing', text: '10) Do you have any hearing disabilities or ringing in your ears?', details: 'q10_details'},
                {key: 'q11_neurological', text: '11) Have you ever suffered from a brain-related, neurological illness?', details: 'q11_details'},
                {key: 'q12_headaches', text: '12) Do you suffer from frequent severe headaches?', details: 'q12_details'},
                {key: 'q13_treatment', text: '13) Are you currently under any form of medical treatment?', details: 'q13_details'},
                {key: 'q14_antibiotics', text: '14) Are you currently taking antibiotics?'},
                {key: 'q15_antihistamines', text: '15) Do you ever take antihistamines?', details: 'q15_details'},
                {key: 'q16_other_meds', text: '16) Are you taking any other medications not mentioned above?', details: 'q16_details'},
                {key: 'q17_chronic', text: '17) Do you have a chronic illness/disorder?', details: 'q17_details'},
                {key: 'q18_psychiatric', text: '18) Have you ever had a psychiatric-based illness/disorder?', details: 'q18_details'},
                {key: 'q19_family_psychiatric', text: '19) Does someone in your family have a psychiatric-based illness/disorder?', details: 'q19_details'},
                {key: 'q20_drugs', text: '20) Have you used any recreational drugs during the past year?', details: 'q20_details'},
                {key: 'q22_substance_abuse', text: '22) Have you ever suffered from substance dependence or abuse?', details: 'q22_details'},
                {key: 'q23_alcohol', text: '23) Do you averagely consume more than 3 alcoholic units a day?'},
                {key: 'q24_sleep', text: '24) Do you have sleeping problems?', details: 'q24_details'},
                {key: 'q25_pregnant', text: '25) Are you pregnant, or is there a chance that you might be?'},
                {key: 'q26_mri', text: '26) Have you ever undergone an MRI for clinical purposes?', details: 'q26_details'},
                {key: 'q27_tms', text: '27) Have you ever undergone TMS?', details: 'q27_details'}
            ];
            
            questions.forEach(q => {
                const answer = formData.get(q.key);
                if (answer) {
                    emailBody += `${q.text} ${answer}\n`;
                    if (q.details && formData.get(q.details)) {
                        emailBody += `   Details: ${formData.get(q.details)}\n`;
                    }
                }
            });
            
            // Add implants
            const implants = formData.getAll('implants');
            if (implants.length > 0) {
                emailBody += `8) Implants in body: ${implants.join(', ')}\n`;
                if (formData.get('q8_details')) {
                    emailBody += `   Details: ${formData.get('q8_details')}\n`;
                }
            }
            
            // Add TMS reaction
            if (formData.get('q27_tms_reaction')) {
                emailBody += `   TMS Adverse Reaction: ${formData.get('q27_tms_reaction')}\n`;
            }
            
            // Add family psychiatric relation
            if (formData.get('q19_relation')) {
                emailBody += `   Family Relation: ${formData.get('q19_relation')}\n`;
            }
            
            emailBody += "\n=== CONSENT ===\n";
            emailBody += `Signature: ${formData.get('signature')}\n`;
            emailBody += `Date: ${formData.get('signatureDate')}\n`;
            emailBody += "\nPatient has consented to undergo transcranial magnetic stimulation under physician care and direction.\n";
            
            // Create mailto link
            const subject = encodeURIComponent("TMS Informed Consent Form - " + formData.get('fullName'));
            const body = encodeURIComponent(emailBody);
            const mailtoLink = `mailto:healmedclinic@gmail.com?subject=${subject}&body=${body}`;
            
            // Open email client
            window.location.href = mailtoLink;
            
            // Prevent default form submission
            return false;
        }
        
        // Set today's date as default for signature date
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('signatureDate').value = today;
        });
    </script>
</body>
</html>
